@{
    ViewBag.Title = "Home Test Page";
}
<head>
    <title>@ViewBag.Title</title>
    @section Scripts {
        <script type="module" src="~/Scripts/custom/slideshow.js"></script>
        <script type="module" src="~/Scripts/custom/animations.js"></script>
    }
</head>

<container>
    <div class="row">

        <div class="coverbg">
            <div class="covertext">
                <h4>TITO THOMAS</h4><br />
                <p>Graduate Software Developer</p>

                <div class="icons-container">
                    <a href="https://www.linkedin.com/in/titot/" target="_blank">
                        <img class="linkedicon" src="@Url.Content("/Content/Assets/icons/linkedin.png")" />
                    </a>
                    <a href="https://github.com/tito-thomas/" target="_blank">
                        <img class="giticon" src="@Url.Content("/Content/Assets/icons/github.png")" />
                    </a>
                    <a href="mailto:titothomas@hotmail.co.uk">
                        <span class="emailicon material-symbols-outlined">mail</span>
                    </a>
                </div>
            </div>
        </div>
        <img class="coverimg" src="@Url.Content("/Content/Assets/fullview.jpg")" />
        <div class="page-scroll">
            <a href="#aboutme"><span class="material-symbols-outlined">expand_more</span></a>
        </div>

    </div>

    <div class="largerow" id="aboutme">
        <div class="bio">
            <div class="desc bioitem" id="biotext">
                <h2><span class="bold-text">About me</span></h2>
                <br />
                <p>
                    Computer Science graduate from Cardiff University. I am a hardworking, project and
                    team oriented professional with one year’s industrial
                    placement experience in software development.
                    <br /> <br />
                    Please see below to view my experience or browse my projects.
                </p>
            </div>
            <img class="selfie bioitem" id="selfie" src="@Url.Content("/Content/Assets/copy.jpg")" />



        </div>
        <div class="bio-scroll">
            <a href="#skills"><span class="material-symbols-outlined">expand_more</span></a>
        </div>

        <div class="skills" id="skills">
            <div class="section-title skills-title">TECHNICAL SKILLS</div>

            <div class="skills-container">

                <div class="lang">
                    <img id="python" src="~/Content/Assets/icons/python.png" />
                    @*<p>4 Years of Experience</p>*@
                </div>

                <div class="lang">
                    <img id="csharp" src="~/Content/Assets/icons/csharp.png" />
                    @*<p>2 Years of Experience including 1 year in industry</p>*@
                </div>

                <div class="lang">
                    <img id="javascript" src="~/Content/Assets/icons/javascript.png" />
                    @*<p>2 Years of Experience</p>*@
                </div>

                <div class="lang">
                    <img id="java" src="~/Content/Assets/icons/java.png" />
                    @*<p>2 Years of Experience</p>*@
                </div>

                <div class="lang">
                    <img id="git" src="~/Content/Assets/icons/git.png" />
                    @*<p>2 Years of Experience</p>*@
                </div>

                <div class="lang">
                    <img id="sql" src="~/Content/Assets/icons/sql.png" />
                    @*<p>2 Years of Experience</p>*@
                </div>

            </div>
        </div>
    </div>
    <div class="proj-row" id="project1">

        <div class="proj1">
            <div class="section-title proj-title">PROJECTS</div>
            <div class="slidecover">

                <div class="slide-container">
                    <div class="slider">
                        <img src="@Url.Content("/Content/Assets/anime-rec/slideshow/welcome.png")" />
                        <img src="@Url.Content("/Content/Assets/anime-rec/slideshow/questions.png")" />
                        <img src="@Url.Content("/Content/Assets/anime-rec/slideshow/dash.png")" />
                        <img id="first-clone" src="@Url.Content("/Content/Assets/anime-rec/slideshow/welcome.png")" />
                    </div>
                </div>
            </div>
            <img class="mac1" src="@Url.Content("/Content/Assets/mac.PNG")" />
            <div class="proj1-desc">
                <h2><span class="bold-text">Anime Recommendation System</span></h2>
                <br />
                <p>
                    A project for my final year dissertation with the goal of recommending
                    Anime TV Shows and Movies its users. <br /> <br /> The website was built using
                    C# ASP.NET and the TV show/Movie suggestions are powered by my recommender engine built in
                    Python.
                </p><br />

                <p><b>Technologies: Python | Scikit-Learn | Pandas | Numpy</b></p>
                <p><b>C# ASP.NET Framework | SQL Server <br /></b></p>


                <a href="@Url.Action("AnimeProject","Home")"  class="see-more">See more</a>
    

            </div>
        </div>
        <div class="proj2">
            <div class="proj2-desc">
                <h2><span class="bold-text">Bitcoin Trading Simulator</span></h2>
                <br />
                <p>
                    Desktop application created for my A-Level Computing project. The app is a Bitcoin trading simulator
                    that allows users to learn to trade using virtual money. The interface provides similar functionality to
                    that of a real cryptocurrency exchange. However, it is intended as an educational tool.
                </p><br />
                <p><span class="bold-text">Technologies: Python | Tkinter | Matplotlib | SQL</span></p>

                <a href="@Url.Action("BitcoinProject","Home")" class="see-more">See more</a>

            </div>
            <div class="slidecover2">
                <div class="slide-container2">
                    <div class="slider2">
                        <img src="@Url.Content("/Content/Assets/bitcoin-py/full_window.PNG")" />
                        <img src="@Url.Content("/Content/Assets/bitcoin-py/dash.PNG")" />
                        <img src="@Url.Content("/Content/Assets/bitcoin-py/full.PNG")" />
                        <img id="first-clone" src="@Url.Content("/Content/Assets/bitcoin-py/full_window.PNG")" />
                    </div>
                </div>
            </div>

            <img class="mac2" src="@Url.Content("/Content/Assets/mac.PNG")" />
        </div>
    </div>


</container>